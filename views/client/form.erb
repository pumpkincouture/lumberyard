<section id="add">
<form action="/clients/create" method="post">
  <p>Please enter client name</p>
  <input type="textbox" name="name"></br>
  <p>Please enter client type</p>
    <p>Standard</p>
        <input type="radio" name="type" value="standard"/>
      <p>Other</p>
        <input type="radio" name="type" value="other"/></br>
  <input type="submit" class="submit-button">
  <% if @success == true %>
    <h3 class ="client_success"> <%= @message %></h3>
  <% else %>
    <h3 class ="client_success"> <%= @message %></h3>
  <% end %>
</form>
</section>